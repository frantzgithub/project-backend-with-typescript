{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "skipLibCheck": true,
        "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ]
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules"]
}